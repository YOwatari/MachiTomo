<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
		
        <fragment
            android:id="@+id/fragment1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:name="com.yowatari.machitomo.ActionMenuFragment" />
        
        <fragment
            android:id="@+id/fragment2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:name="com.yowatari.machitomo.TimelineFragment" />

    </LinearLayout>
    
    <!-- The navigation drawer -->
    <LinearLayout 
        android:id="@+id/drawer_linearlayout"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#EEE" >
        <!-- 
        <Button
            android:id="@+id/drawer_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="drawer button" />
         -->
         <fragment
             android:id="@+id/drawer_fragment"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:name="com.yowatari.machitomo.DrawerFragment" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>